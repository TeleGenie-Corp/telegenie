{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "lib",
    "target": "es2020",
    "lib": ["es2020"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "rootDir": "src"
  },
  "compileOnSave": true,
  "include": ["src"]
}
